#!/bin/sh
if test "$1" = "-d"; then
  if test -d .git; then
    # need -n 1 for merge commits
    git log HEAD^..HEAD -n 1 --format=%cd --date=short
  else
    date -r VERSION +%F
  fi
else
  if test -d .git; then
    s=`git describe --match "dosemu2-[0-9]*" HEAD | sed -e 's/^dosemu2-//'`
  else
    s=`cat VERSION`
  fi
  echo $s
fi
